{
  "linter": {
    "enabled": true,
    "ignore": [
      "libs/keyboard.ts",
      "libs/stl_exporter.ts",
      "libs/DRACOLoader.ts",
      "libs/BufferGeometryUtils.ts",
      "libs/parse_stl_buffer.ts",
      "libs/trackball_controls.ts",
      "*.d.ts"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "useShorthandArrayType": "off",
        "useBlockStatements": "off",
        "noNegationElse": "off",
        "noImplicitBoolean": "off",
        "useTemplate": "off",
        "useSingleVarDeclarator": "off",
        "noShoutyConstants": "off"
      },
      "complexity": { "useSimplifiedLogicExpression": "off" },
      "a11y": {
        "useValidAnchor": "off",
        "useKeyWithClickEvents": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noRenderReturnValue": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noAsyncPromiseExecutor": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  }
}
